<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('./../layout/head') %>
    </head>

    <body>
        <%- include('./../layout/header') %>
            <main>
                <div class="title">
                    <h3>(<%= booksList.length %>) Saved Books</h3>
                </div>
                <div class="card-container">
                    <% booksList.forEach(book=> {%>

                        <div class="card">
                            <div class="img-container">
                                <img src=<%=book.image %> alt="book" class='img'>
                            </div>
                            <h3 class="book-title">
                                <%=book.title %>
                            </h3>
                            <p class="author">
                                <em>
                                    <%=book.author %>
                                </em>
                            </p>
                            <a href="/book/<%=book.id%>" class="view">View Detail</a>
                        </div>

                        <% }); %>
                </div>
            </main>

            <%- include('./../layout/footer') %>

                <!-- jQuery -->
                <script src=" https://code.jquery.com/jquery-3.5.1.js"></script>

                <!-- js -->
                <script src="js/app.js"></script>
    </body>

</html>
