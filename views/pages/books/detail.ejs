<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('./../../layout/head2') %>
    </head>

    <body>
        <%- include('./../../layout/header') %>
            <main>
                <div class="title">
                    <h3>
                        <%= book.title %>
                    </h3>
                </div>
                <div class="card-container">
                    <div class="card">
                        <div class="img-container">
                            <img src="<%=book.image %>" alt="book" class='img'>
                        </div>
                        <h3 class="book-title">
                            <%=book.title %>
                        </h3>
                        <p class="author">
                            <em>
                                <%=book.author %>
                            </em>
                        </p>
                        <p class='desc'>
                            <%=book.description %>
                        </p>

                        <a href="/book/update/<%= book.id %>" class="update">Update Details</a>

                        <form action='/book/<%= book.id %>?_method=delete' method="POST">
                            <input type="submit" value="Delete this book" class="submit">
                        </form>

                    </div>
                </div>
            </main>
            <%- include('./../../layout/footer') %>


                <!-- jQuery -->
                <script src=" https://code.jquery.com/jquery-3.5.1.js"></script>

                <!-- js -->
                <script src="../js/app.js"></script>
    </body>

</html>
